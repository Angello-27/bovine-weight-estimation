# ============================================
# Bovine Weight Estimation API - Development Environment
# ============================================
# ⚠️ Este archivo NO debe ser commiteado (está en .gitignore)

# ===== Application =====
APP_NAME=Bovine Weight Estimation API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# ===== API Configuration =====
API_V1_PREFIX=/api/v1
DOCS_URL=/api/docs
REDOC_URL=/api/redoc
OPENAPI_URL=/api/openapi.json

# ===== CORS =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ===== MongoDB =====
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=bovine_weight_estimation
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# ===== Security =====
# ⚠️ Solo para desarrollo - Cambiar en producción
SECRET_KEY=dev-secret-key-change-in-production-12345
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===== ML Models =====
ML_MODELS_PATH=./ml_models
ML_DEFAULT_MODEL=generic-v1.0.0.tflite
ML_INPUT_SIZE=224
ML_CONFIDENCE_THRESHOLD=0.80


# ===== Logging =====
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ===== Performance =====
MAX_UPLOAD_SIZE_MB=10
REQUEST_TIMEOUT_S=30

# ===== Hacienda Gamelera =====
HACIENDA_NAME=Hacienda Gamelera
HACIENDA_OWNER=Bruno Brito Macedo
HACIENDA_LOCATION=San Ignacio de Velasco, Santa Cruz, Bolivia
HACIENDA_CAPACITY=500
